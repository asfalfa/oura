generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String
  email     String  @unique
  password  String
  role      Role    @default(BASIC)
  orders    Order[]
}

model SizeColor {
  id     String      @id @default(uuid())
  amount Int
  name   String
  size   ProductSize @relation(fields: [sizeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  sizeId String
}

model ProductSize {
  id        String      @id @default(uuid())
  size      Size
  colors    SizeColor[]
  product   Product     @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  productId String
}

model Product {
  id          String        @id @default(uuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  name        String
  description String
  image       String?
  gender      String
  category    String
  subcategory String
  price       Int
  sales       Int           @default(0)
  sizes       ProductSize[]
  onSale      Boolean       @default(false)
  onSeasonal  Boolean       @default(false)
  orders      Order[]
}

model Order {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    String
  products  Product[]
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
}

enum Role {
  BASIC
  EDITOR
  SUPER
  ADMIN
}
